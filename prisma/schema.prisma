generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id         String    @id @default(uuid())
  email      String    @unique
  password   String
  name       String?

  credits    Int       @default(100000)
  createdAt  DateTime  @default(now())
  agents     Agent[]
  contents   Content[]
  tasks      Task[]
  tokenUsage TokenUsage[]
}

model Agent {
  id          String   @id @default(uuid())
  name        String   @unique
  ownerId     String
  owner       User     @relation(fields: [ownerId], references: [id])
  description String?
  createdAt   DateTime @default(now())
  tasks       Task[]
  tokenUsage  TokenUsage[]
}

model Task {
  id              String       @id @default(uuid())
  userId          String
  user            User         @relation(fields: [userId], references: [id])
  agentId         String?
  agent           Agent?       @relation(fields: [agentId], references: [id])

  type            String
  status          String       @default("pending")
  payload         Json
  idempotencyKey  String?      @unique
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  taskResults     TaskResult[]
  tokenUsage      TokenUsage[]
}


// payload: { it contains various fields depending on the content type for example, for articles it may contain title, body, author, source, etc. }

model Content {
  id        String   @id @default(uuid())
  title     String?
  body      String   @db.Text
  authorId  String?
  author    User?    @relation(fields: [authorId], references: [id])
  source    String?
  metadata  Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

//source :{it can be a URL, book title, journal name, etc. depending on where the content was obtained from}
//metadata: {it can include fields like language, word count, publication date, tags, etc. depending on the content type}

model TaskResult {
  id                String   @id @default(uuid())
  taskId            String
  task              Task     @relation(fields: [taskId], references: [id])
  agentId           String?
  type              String
  status            String   @default("pending")
  output            Json?
  contentId         String?
  order             Int? 

  model             String?
  promptTokens      Int?
  completionTokens  Int?
  totalTokens       Int?
  createdAt         DateTime @default(now())
  updateddAt        DateTime @updatedAt
  errorMessage      String?
  tokenUsage        TokenUsage[]
}

model TokenUsage {
  id               String    @id @default(uuid())

  userId           String
  user             User?    @relation(fields: [userId], references: [id])

  taskId           String?
  task             Task?   @relation(fields: [taskId],references: [id])

  taskResultId     String?
  taskResult       TaskResult?  @relation(fields: [taskResultId],references: [id])

  agentId          String?
  agent            Agent?   @relation(fields: [agentId],references: [id])

  provider         String
  model            String

  promptTokens     Int
  completionTokens Int
  totalTokens      Int

  totalUSD         Float?
  createdAt        DateTime @default(now())



}
